MODULENAME="VulnScan"
MODULEVERS="0.12"
MODULECRED="REDD"
LOGDIR="$HOME/netup/loot"
VULNLOG="$LOGDIR/vulnlog.txt"
TMPLOG="/tmp/netuplog.txt"
TMPLOG2="/tmp/netuplog2.txt"
mkdir -p $LOGDIR
rm -rf $VULNLOG
printf "        Running Vuln scan for Subnet - $SUBNET \n"
printf "          DO NOT EXIT OR CRTL+C!  PROCESSES ARE\n"
printf "                   STILL RUNNING!!!\n"
printf "\n"
printf "  Note: Scan can take 5-15 mins depending on speed of Network.\n"
printf "\n"
printf "                   Please Wait ... "
echo -e "Results of $SUBNET:" > $VULNLOG
nmapscancommon(){
        if [ ! -f "$TMPLOG" ]; then
                touch $TMPLOG;
        fi
        if [ ! -f "$TMPLOG2" ]; then
                touch $TMPLOG2;
        fi
        nmap -sV --script=vuln --script-args=vulns.short --open $SUBNET -p21-445 > $TMPLOG
        grep -P 'scan report for|tcp open|tcp  open|VULNERABLE[^"]*' $TMPLOG > $TMPLOG2
        sed -i 's/Nmap scan report for /Port Scan Analysis for /g' $TMPLOG2
        sed -i 's/.tcp open.*/ Port Analysis: \n/g' $TMPLOG2
        sed -i 's/.tcp  open.*/ Port Analysis: \n/g' $TMPLOG2
        cat $TMPLOG2 > $VULNLOG
        if [ -f "$TMPLOG" ]; then   
                rm -rf $TMPLOG;
        fi
        if [ -f "$TMPLOG2" ]; then
                rm -rf $TMPLOG2;
        fi
}
    (nmapscancommon; /bin/false) &
    pid=$! ; i=0
    while ps -a | awk '{print $1}' | grep -q "${pid}"
    do
        c=`expr ${i} % 4`
        case ${c} in
            0) printf '%s\b' '\' ;;
            1) printf '%s\b' '|' ;;
            2) printf '%s\b' '/' ;;
            3) printf '%s\b' '-' ;;
        esac
        i=`expr ${i} + 1`
        sleep .25
    done
    wait ${pid}
    ret=$?
    echo -e ""
    cat $VULNLOG
    echo -e ""
